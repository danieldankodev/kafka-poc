{
  "name": "kafka-poc",
  "version": "1.0.0",
  "description": "Using kafka for simple messaging demonstration",
  "main": "index.ts",
  "scripts": {
    "consumer": "node -r ts-node/register --env-file=.env ./src/run-consumer.ts",
    "producer": "node -r ts-node/register --env-file=.env ./src/run-producer.ts",
    "consumer-debug": "node --inspect=9030 -r ts-node/register --env-file=.env ./src/run-consumer.ts",
    "producer-debug": "node --inspect  -r ts-node/register --env-file=.env ./src/run-producer.ts"
  },
  "type": "module",
  "author": "Daniel Danko",
  "license": "ISC",
  "devDependencies": {
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@kafkajs/confluent-schema-registry": "3.9.0",
    "kafkajs": "2.2.4"
  }
}
